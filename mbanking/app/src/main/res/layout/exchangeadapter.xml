<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/moneyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="42dp"
        android:text="TextView"
        android:textColor="@color/exchangeText"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moneyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="TextView"
        android:textColor="@color/exchangeText"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/moneyName"
        android:layout_alignBottom="@+id/moneyName"
        android:layout_toRightOf="@+id/moneyName"
        android:layout_toEndOf="@+id/moneyName" />
</RelativeLayout>